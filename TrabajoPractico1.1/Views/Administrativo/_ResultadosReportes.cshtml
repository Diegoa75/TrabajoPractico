@using DAL
@model List<Reservas>
    <div>
        @if (Model != null && Model.Any()) {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>Sede</td>
                        <td>Versión</td>
                        <td>Pelicula</td>
                        <td>Precio</td>
                    </tr>
                </thead>
                @foreach (var reserva in Model)
                {
                    <tr>
                        <td>@reserva.Sedes.Nombre</td>
                        <td>@reserva.Versiones.Nombre</td>
                        <td>@reserva.Peliculas.Nombre</td>
                        <td>@( Convert.ToDecimal(reserva.Sedes.PrecioGeneral) * Convert.ToInt32(reserva.CantidadEntradas))</td>
                    </tr>
                }
            </table>
        } 
    </div>
@using TrabajoPractico1._1
@model Usuarios
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}
@if (ViewBag.Error != null)
{
    <h2>@ViewBag.Error</h2>
}
<form action="/Administrativo/VerificarUsuario" method="post" class="form-group row formulario-reservas">
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(false, "", new { @class = "text-danger" })
	<label class="input-text col-md-10">
		@Html.TextBoxFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Usuario" })
	</label>
	<label class="input-text col-md-10">
		@Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Contraseña" })
	</label>
	<hr />
	<button type="submit" class="btn btn-info btn-lg btn-block">Login</button>
</form>
 


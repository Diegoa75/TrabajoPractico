	Layout = "/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Reservar";
}

<section>
	<h2>Bienvenido al panel de reservas</h2>
	<form action="/home/inicio" method="post" class="row formulario-reservas">
		<!--<input class="form-control input-sm" type="text" name="dni" placeholder="1234"/>
